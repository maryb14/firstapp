<!DOCTYPE html>
<html>
<head>
  <title>LangyLearny</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" id="youshouldwork">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">LangyLearny</a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="active"><%=link_to 'Home', root_url %></li>
        <% if current_user.present? %>

        <li> <%=link_to 'Log out', logout_url, method: 'delete' %> </li>

        <% else %>

        <li> <%=link_to 'Registration', new_user_url %> </li>
        <li> <%=link_to 'Log in', login_url %> </li> 

        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <%=yield %>
</div>

</body>
</html>
