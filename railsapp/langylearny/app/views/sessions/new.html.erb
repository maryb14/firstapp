<div class="row">

	<div class="col-md-12">
		<h1>  Log in </h1>

		<%= form_for :session, url: login_url, html: {class: 'form-horizontal', } do |f| %>
		<% if flash.now[:error].present? %>
			<div class="alert alert-danger" role="alert">
				<%= flash.now[:error] %>
			</div>
		<% end %>
  		<div class="form-group">
    		<label class="col-md-2 col-sm-4 control-label">User name</label>
    		<div class="col-md-8 col-sm-6">
      			<%= f.text_field :user_name, class: 'form-control' %>
    		</div>
  		</div>
  		<div class="form-group">
    		<label class="col-md-2 col-sm-4 control-label">Password</label>
    		<div class="col-md-8 col-sm-6">
      			<%= f.password_field :password, class: 'form-control' %>
    		</div>
  		</div>
  		<div class="col-md-8 col-md-offset-2">
			<%= f.submit 'Submit', class: 'btn btn-primary pull-right' %>	
		</div>
  		<% end %>
	</div>

</div>